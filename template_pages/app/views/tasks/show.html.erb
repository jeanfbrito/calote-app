<div class="content ">
  <div class="container-fluid">
    <div class="card card-default m-t-20">
      <div class="card-header separator">
        <div class="card-title">
          <h3><%= @task.title %></h3>
        </div>
        <div class="card-controls">
          <%= link_to "Voltar", tasks_path, class: "btn btn-default" %>
        </div>
      </div>
      <div class="card-block p-t-10">
        <p><strong>Data de entrega:</strong> <%= l(@task.delivery_date) %></p>
        <p><strong>Gerente:</strong> <%= @task.manager.try(:name) %></p>
        <p><strong>Status:</strong> <%= @task.status %></p>
        <p><strong>Prioridade:</strong> <%= @task.priority %></p>
        <p><strong>Ultima atualização:</strong> <%=@task.updated_at %></p>
        <p><strong>Membros:</strong> <%= @task.users.map(&:name).join(", ") %></p>
        <p><strong>Descrição:</strong> <%= @task.description %></p>
      </div>
      <div class="card-header separator">
        <div class="card-title">
          <h3>Comentários</h3>
          <%= render @comments %>
          <%= render partial: "comments/form", locals: { comment: @task.comments.new(user: current_user) } %>
          </div>
        </div>
      </div>
      <div class="card-block">
      </div>
      <div class="card-header separator">
        <div class="card-title">
          <h3>Sub-tarefas</h3>
        </div>
      </div>
      <div class="card-block">
        <table class="table table-hover table-condensed dataTable no-footer">
          <thead>
            <th>Título</th>
            <th>Status</th>
            <th>Prioridade</th>
            <th>Responsávies</th>
            <th>Data de entrega</th>
            <th>Descrição</th>
          </thead>
          <tbody>
          <% @task.subtasks.each do |subtask| %>
              <tr>
                <td><%= subtask.title %></td>
                <td><%= subtask.status %></td>
                <td><%= subtask.priority %></td>
                <td><%= subtask.users.map(&:name).join(", ") %></td>
                <td><%= subtask.delivery_date %></td>
                <td><%= subtask.description %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
