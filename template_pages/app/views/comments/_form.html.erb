<%= simple_form_for comment, input_html: { id: "comment_form" } do |f| %>
  <%= f.hidden_field :ancestry %>
  <%= f.hidden_field :user_id %>
  <%= f.hidden_field :task_id %>
  <div class="col-md-12">
    <%= f.input :body %>
  </div>
  <div class="col-md-12">
    <%= f.file_field :files, multiple: true, class: "subject-file" %>
  </div>
  <div class="col-md-12 text-center">
    <%= f.submit 'Comentar', :class => 'btn btn-success' %>
  </div>
<% end %>
